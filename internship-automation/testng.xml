<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite name="Test Automation Suite" verbose="1" preserve-order="true">

    <listeners>
        <listener class-name="com.automation.listeners.ExtentTestListener"/>
    </listeners>

    <!-- ================================================= -->
    <!-- 1️⃣ APPLY NOW – EMAIL (CREATES USER ACCOUNT) -->
    <!-- ================================================= -->
    <test name="01_ApplyNow_Email">
        <classes>
            <class name="com.automation.tests.ApplyNowEmailTest"/>
        </classes>
    </test>

    <!-- ================================================= -->
    <!-- 2️⃣ APPLY NOW – LOGIN (USES SAVED ACCOUNT) -->
    <!-- ================================================= -->
    <test name="02_ApplyNow_Login">
        <classes>
            <class name="com.automation.tests.ApplyNowLoginTest"/>
        </classes>
    </test>

    <!-- ================================================= -->
    <!-- 3️⃣ FEEDBACK – EMAIL -->
    <!-- ================================================= -->
    <test name="03_Feedback_Email">
        <classes>
            <class name="com.automation.tests.FeedbackEmailTest"/>
        </classes>
    </test>

    <!-- ================================================= -->
    <!-- 4️⃣ FEEDBACK – LOGIN -->
    <!-- ================================================= -->
    <test name="04_Feedback_Login">
        <classes>
            <class name="com.automation.tests.FeedbackLoginTest"/>
        </classes>
    </test>

    <!-- ================================================= -->
    <!-- 5️⃣ APPLY NOW – OTHER FLOWS -->
    <!-- ================================================= -->
    <test name="05_ApplyNow_Others">
        <classes>
            <class name="com.automation.tests.ApplyNowMobileTest"/>
            <class name="com.automation.tests.ApplyNowNegativeTest"/>
            <class name="com.automation.tests.ApplyNowNoSignupTest"/>
        </classes>
    </test>

    <!-- ================================================= -->
    <!-- 6️⃣ FEEDBACK – OTHER FLOWS -->
    <!-- ================================================= -->
    <test name="06_Feedback_Others">
        <classes>
            <class name="com.automation.tests.FeedbackMobileTest"/>
            <class name="com.automation.tests.FeedbackNegativeTest"/>
            <class name="com.automation.tests.FeedbackNoSignupTest"/>
        </classes>
    </test>

    <!-- ================================================= -->
    <!-- 7️⃣ GET CONNECTED -->
    <!-- ================================================= -->
    <test name="07_GetConnected">
        <classes>
            <class name="com.automation.tests.GetConnectedTest"/>
            <class name="com.automation.tests.GetConnectedNegativeTest"/>
        </classes>
    </test>

    <!-- ================================================= -->
    <!-- 8️⃣ REGISTER WITH US -->
    <!-- ================================================= -->
    <test name="08_RegisterWithUs">
        <classes>
            <class name="com.automation.tests.RegisterWithUsTest"/>
            <class name="com.automation.tests.RegisterWithUsNegativeTest"/>
        </classes>
    </test>

    <!-- ================================================= -->
    <!-- 9️⃣ RESCHEDULE FLOWS -->
    <!-- ================================================= -->
    <test name="09_Reschedule">
        <classes>
            <class name="com.automation.tests.RescheduleFunctionalityAcceptTest"/>
            <class name="com.automation.tests.RescheduleFunctionalityRejectTest"/>
        </classes>
    </test>

</suite>

